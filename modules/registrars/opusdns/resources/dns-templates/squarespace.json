{
	"id": "squarespace",
	"name": "Squarespace",
	"description": "DNS records for Squarespace website builder",
	"category": "hosting",
	"version": "1.0.0",
	"author": "OpusDNS",
	"documentation_url": "https://support.squarespace.com/hc/en-us/articles/205812378",
	"supports_subdomain": true,
	"records": [
		{
			"type": "A",
			"name": "@",
			"ttl": 3600,
			"values": [
				"198.185.159.144",
				"198.185.159.145",
				"198.49.23.144",
				"198.49.23.145"
			],
			"description": "Squarespace A records for root domain"
		},
		{
			"type": "CNAME",
			"name": "www",
			"ttl": 3600,
			"values": ["ext-cust.squarespace.com."],
			"description": "Squarespace CNAME for www subdomain"
		}
	],
	"variables": [
		{
			"name": "verification_code",
			"label": "Verification Code",
			"type": "text",
			"required": false,
			"placeholder": "squarespace-verification=...",
			"description": "Optional verification TXT record from Squarespace domain settings",
			"record_template": {
				"type": "TXT",
				"name": "@",
				"ttl": 3600,
				"value": "\"{{verification_code}}\""
			}
		}
	]
}
