{
	"id": "sparkpost",
	"name": "SparkPost",
	"description": "CNAME and TXT records for SparkPost email delivery service",
	"category": "email",
	"version": "1.0.0",
	"author": "OpusDNS",
	"documentation_url": "https://support.sparkpost.com/docs/getting-started/setting-up-domains/",
	"supports_subdomain": true,
	"records": [],
	"variables": [
		{
			"name": "dkim_selector",
			"label": "DKIM Selector",
			"type": "text",
			"required": true,
			"placeholder": "scph0123._domainkey",
			"description": "DKIM selector hostname from SparkPost"
		},
		{
			"name": "dkim_value",
			"label": "DKIM Value",
			"type": "text",
			"required": true,
			"placeholder": "v=DKIM1; k=rsa; h=sha256; p=...",
			"description": "DKIM TXT value from SparkPost domain settings",
			"record_template": {
				"type": "TXT",
				"name": "{{dkim_selector}}",
				"ttl": 3600,
				"value": "\"{{dkim_value}}\""
			}
		},
		{
			"name": "bounce_domain",
			"label": "Bounce Domain",
			"type": "text",
			"required": true,
			"placeholder": "sparkpostmail.com",
			"description": "Bounce domain CNAME target from SparkPost",
			"record_template": {
				"type": "CNAME",
				"name": "bounces",
				"ttl": 3600,
				"value": "{{bounce_domain}}"
			}
		}
	]
}
