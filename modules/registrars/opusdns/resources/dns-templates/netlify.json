{
	"id": "netlify",
	"name": "Netlify",
	"description": "A and CNAME records for Netlify JAMstack hosting",
	"category": "hosting",
	"version": "1.0.0",
	"author": "OpusDNS",
	"documentation_url": "https://docs.netlify.com/domains-https/custom-domains/",
	"supports_subdomain": true,
	"records": [
		{
			"type": "A",
			"name": "@",
			"ttl": 3600,
			"values": ["75.2.60.5"],
			"description": "Netlify A record for root domain"
		},
		{
			"type": "CNAME",
			"name": "www",
			"ttl": 3600,
			"values": ["{{site_name}}.netlify.app."],
			"description": "Netlify CNAME for www subdomain"
		}
	],
	"variables": [
		{
			"name": "site_name",
			"label": "Netlify Site Name",
			"type": "text",
			"required": true,
			"placeholder": "my-site",
			"description": "Your Netlify site name (from your-site.netlify.app)"
		}
	]
}
